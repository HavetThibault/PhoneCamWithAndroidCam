<Window x:Class="PhoneCamWithAndroidCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneCamWithAndroidCam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image x:Name="MainImage" Grid.Column="0"/>
        <StackPanel Grid.Column="1">
            <Button Click="LaunchStream" Width="120" Height="40" Content="Launch stream" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Frames displayed"/>
                <Label x:Name="LabelCountFrame" Content="" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Frames per seconds"/>
                <Label x:Name="LabelFps" Content="" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
