<Window x:Class="PhoneCamWithAndroidCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneCamWithAndroidCam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image x:Name="MainImage" Grid.Column="0" Grid.RowSpan="2"/>
        <Button Grid.Column="1" Grid.Row="0" Click="MockTest" Width="50" Height="50" Content="Mock"/>
        <Button Grid.Column="1" Grid.Row="2" Click="LaunchStream" Width="50" Height="50" Content="Launch stream"/>
    </Grid>
</Window>
