<UserControl x:Class="PhoneCamWithAndroidCam.Views.MainUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoneCamWithAndroidCam.Views"
             xmlns:viewmodels="clr-namespace:PhoneCamWithAndroidCam.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image x:Name="MainImage" Grid.Column="0" Source="{Binding MainImageSource}"/>
        <StackPanel Grid.Column="1">
            <Button Command="{Binding CommandLaunchStreaming}" Width="120" Height="40" Content="Launch stream" Margin="5"/>
            <Button Command="{Binding CommandStopStreaming}" Width="120" Height="40" Content="Stop stream" Margin="5"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Frames displayed"/>
                <Label x:Name="LabelCountFrame" Content="" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Frames per seconds"/>
                <Label x:Name="LabelFps" Content="" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
